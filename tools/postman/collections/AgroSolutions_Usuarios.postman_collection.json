  "item": [
    {
      "name": "Registrar usuário (POST /api/usuarios/registrar)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/usuarios/registrar",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "usuarios",
            "registrar"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"senha\": \"{{password}}\",\n  \"tipoId\": \"{{tipoId}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Public endpoint: remove Authorization header if present",
              "pm.request.headers.remove('Authorization');"
            ]
          }
        }
      ]
    },
    {
      "name": "Login (POST /api/usuarios/login) - salva token em {{jwt}}",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
